{% extends 'site.html.twig' %}

{% block title %}Add Announces{% endblock %}

{% block content %}
    <div class="clearfix"></div>

    <div class="content-wrapper d-flex justify-content-center">
        <div class="card w-50">
            <div class="card-body">
                <div class="card-title">Add a new Announce</div>
                <hr>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.description) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.status) }}
                </div>
                <hr class="w-100 my-3">
                <div class="form-group d-flex justify-content-center">
                    <button type="submit" class="btn btn-light btn-round px-5 w-50">
                        Add
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
