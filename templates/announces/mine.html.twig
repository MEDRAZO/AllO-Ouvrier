{% extends 'site.html.twig' %}

{% block title %}Announces{% endblock %}

{% block content %}
    <div class="clearfix"></div>

    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row mt-3 justify-content-center">
                {% for announce in announces %}
                        <div class="col-12 col-md-6 col-lg-6 d-flex">
                            <div class="card profile-card-2 w-100">
                                <div class="card-body pt-5 d-flex flex-column">
                                    <h5 class="card-title">{{ announce.title }}</h5>
                                    <hr class="w-100 my-3">
                                    <p class="card-text">{{ announce.description }}</p>
                                    <hr class="w-100 my-3">
                                    <div class="form-group text-nowrap d-flex justify-content-center">
                                        <a href="#">
                                            <button type="button" class="m-3 btn btn-info btn-round px-5">Edit</button>
                                        </a>
                                        <a href="{{ url('app_announces_edit_status', { 'id': announce.id }) }}">
                                            <button type="button" class="m-3 btn btn-warning btn-round px-5">change the status</button>
                                        </a>
                                        <a href="#">
                                            <button type="button" class="m-3 btn btn-danger btn-round px-5">Delete</button>
                                        </a>
                                    </div>
                                    <hr class="w-100 my-3">
                                    <div class="card-content">
                                        <div class="row row-group m-0">
                                            <div class="col-6 border-light">
                                                <div class="card-body">
                                                    <h5 class="text-white mb-0">{{ announce.sells }}<span class="float-right"><i
                                                                    class="fa fa-shopping-cart"></i></span></h5>
                                                </div>
                                            </div>
                                            <div class="col-6 border-light">
                                                <div class="card-body">
                                                    <h5 class="text-white mb-0">{{ announce.views }}<span class="float-right"><i
                                                                    class="fa fa-eye"></i></span></h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="w-100 my-3">
                                    <div class="form-group text-nowrap d-flex justify-content-between">
                                        <p class="card-text mt-3 m-3">{{ announce.createdAt | date('d-m-Y H:i') }}</p>
                                        <p class="card-text mt-3 m-3">{% if announce.status %}online{% else %}offline{% endif %}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
